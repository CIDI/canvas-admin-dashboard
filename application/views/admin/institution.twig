{% extends "_templates/base.twig" %}

{% block page_title %}
	Institution Details
{% endblock %}

{% block nav %}
	<style type="text/css">
		body { padding-top: 50px; }
	</style>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
	  <div class="container">
	   	<ul class="nav navbar-nav">
			<li>
				<a href="{{ constant('URL') }}admin/index">Admin</a>
			</li>
			<li class="active">
				<a href="{{ constant('URL') }}admin/institution">Institution</a>
			</li>
			<li>
				<a href="{{ constant('URL') }}reports/{{ institution.slug }}/syllabus/dashboard" target="_blank">Syllabus</a>
			</li>
			<li>
				<a href="{{ constant('URL') }}reports/{{ institution.slug }}/lti/tools" target="_blank">LTI</a>
			</li>
		</ul>
	  </div>
	</nav>
{% endblock %}

{% block topbar %}
    <div class="heading">
        <div class="container">
            <h1><i class="fa fa-cogs"></i> Institution Details</h1>
        </div>
    </div>
{% endblock %}

{% block masthead %}
{% endblock %}

{% block content %}
	<form action="{{ constant('URL') }}admin/institution_save" class="form-horizontal" enctype="multipart/form-data" autocomplete="false"
       method="post">
		<div class="form-group">
			<label for="institution_name" class="col-sm-2 control-label">Name: </label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="institution[name]" id="institution_name" value="{{ institution.name }}">
			</div>
		</div>
		<div class="form-group">
			<label for="institution_slug" class="col-sm-2 control-label">URL Code: </label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="institution[slug]" id="institution_slug" value="{{ institution.slug }}">
			</div>
		</div>
		<div class="form-group">
			<label for="institution_primary_canvas_account_id" class="col-sm-2 control-label">Primary Canvas Account ID: </label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="institution[primary_canvas_account_id]" id="institution_primary_canvas_account_id" value="{{ institution.primary_canvas_account_id }}" required>
			</div>
		</div>
		<div class="form-group">
			<label for="institution_oauth_token" class="col-sm-2 control-label">Admin OAuth Token: </label>
			<div class="col-sm-10">
				<input type="password" class="form-control" name="institution[oauth_token]" id="institution_oauth_token" value="" {% if institution.oauth_token %}placeholder="Token Exists, enter new token to change"{% else %}placeholder="Token not set (required)" required{% endif %}>
			</div>
		</div>
		<div class="form-group">
			<label for="institution_logo" class="col-sm-2 control-label">Logo URL: </label>
			<div class="col-sm-10">
				<input type="text" class="form-control" name="institution[logo]" id="institution_logo" placeholder="URL to a logo to display at the footer of the dashboard" value="{{ institution.logo }}">
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-default">Update</button>
			</div>
		</div>
	</form>

{% endblock %}