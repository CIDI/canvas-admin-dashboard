{% extends "_templates/base.twig" %}

{% block page_title %}
	Institution Setup
{% endblock %}

{% block topbar %}
    <div class="heading">
        <div class="container">
            <h1><i class="fa fa-cogs"></i> Institution Setup</h1>
        </div>
    </div>
{% endblock %}

{% block masthead %}
{% endblock %}

{% block content %}
	<form action="{{ constant('URL') }}admin/institution_save" class="form-horizontal" enctype="multipart/form-data" autocomplete="false"
       method="post">
		<div class="form-group">
			<label for="institution_name">Name: </label>
			<input type="text" class="form-control" name="institution[name]" id="institution_name" value="{{ institution.name }}">
		</div>
		<div class="form-group">
			<label for="institution_slug">URL Code: </label>
			<input type="text" class="form-control" name="institution[slug]" id="institution_slug" value="{{ institution.slug }}">
		</div>
		<div class="form-group">
			<label for="institution_primary_canvas_account_id">Primary Canvas Account ID: </label>
			<input type="text" class="form-control" name="institution[primary_canvas_account_id]" id="institution_primary_canvas_account_id" value="{{ institution.primary_canvas_account_id }}" required>
		</div>
		<div class="form-group">
			<label for="institution_oauth_token">Admin OAuth Token: </label>
			<input type="password" class="form-control" name="institution[oauth_token]" id="institution_oauth_token" value="" {% if instituion.oauth_token %}placeholder="Token Exists, enter new token to change"{% else %}placeholder="Token not set (required)" required{% endif %}>
		</div>
		<button type="submit" class="btn btn-default">Update</button>
	</form>

{% endblock %}